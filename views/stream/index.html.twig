{# /stream/index.html.twig #}

{% extends "layout.html.twig" %}

{% block content %}
        <div class="row">
            <div class="col-sm-12">
                <!-- Title -->
                <h1 class="text-center login-title">Realtime WebRTC</h1>

                  <div id="videos" class="row">
                    <div class="col-sm-6">
                        <video id="localVideo" autoplay muted style="width: 100%"></video>
                    </div>
                    <div class="col-sm-6">
                        <video id="remoteVideo" autoplay style="width: 100%"></video>
                    </div>
                    
                  </div>
                    
                    <div id="message">
                        {{ message|default('Mensaje vacio.') }}
                    </div>{#.message#}
            </div>{# .col-sm-6.col-md-4.col-md-offset-4 #}
        </div>{# .row #}
        <input type='hidden' value='{{room}}' id='roomKey'/>
{% endblock %}

{% block endBody %}
    <script src="/js/lib/adapter.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.0.6.js"></script>
    <script src="/js/main.js"></script>    
{% endblock %}
